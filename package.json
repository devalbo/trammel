{
  "name": "trammel",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "app-ref",
    "app-codex"
  ],
  "scripts": {
    "dev": "npm run dev:all",
    "dev:ref": "npm --workspace app-ref run dev",
    "dev:codex": "npm --workspace app-codex run dev",
    "dev:all": "concurrently -k \"npm run dev:ref\" \"npm run dev:codex\"",
    "build": "npm run build:codex && npm run build:copy && npm run build:ref",
    "build:codex": "BUNDLE=1 npm --workspace app-codex run build",
    "build:ci": "CI=true BUNDLE=1 npm --workspace app-codex run build && BASE_PATH=/${REPO_NAME}/ npm run build:ref",
    "build:copy": "node scripts/copy-codex-dist.mjs",
    "build:ref": "npm --workspace app-ref run build",
    "preview": "npm --workspace app-ref run preview",
    "test": "npm --workspaces --if-present test"
  },
  "engines": {
    "node": ">=20.19"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
